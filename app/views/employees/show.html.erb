<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
         <div class="col-md-6">
            <b><%= @employee.last_name %> - <%= @employee.identification_number %> - <%= @employee.employee_type.name %></b>
         </div>
         <div class="col-md-6" style="text-align: right;">
          <%= link_to edit_employee_path(@employee.id), :class => "btn btn-default btn-xs" do %>
              <span class="fa fa-pencil"></span> Edit Profile
          <% end %>
          <%= link_to employees_path, :class => "btn btn-default btn-xs" do %>
            <span class="fa fa-arrow-left"> </span> Back to List
          <% end %>
          <%= link_to employee_path(@employee), data: {:confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-danger btn-xs" do %>
            <span class="fa fa-times"></span>
            Delete
          <% end %>
         </div>
        </div>
      </div>

      <div class="row" style="padding: 10px;">
        <div class="col-md-2">
          <%= image_tag @employee.profile_picture.url(:standard) %>
        </div>
      </div>

      <div class="row basic-info" style="padding: 10px;">
       <div class="col-md-6">
        <h4>Basic Information</h4>
        <table class="table table-bordered">
          <tr>
            <th style="width: 100px;"><span class="fa fa-user"> </span> Name</th>
            <td><%= @employee.first_name %> <%= @employee.middle_name %> <%= @employee.last_name %></td>
          </tr>
          <tr>
            <th style="width: 100px;"><span class="fa fa-home"> </span> Address </th>
            <td><%= @employee.address %></td>
          </tr>
          <tr>
            <th style="width: 100px;"><span class="fa fa-birthday-cake"> </span> Birthday </th>
            <td><%= @employee.date_of_birth %></td>
          </tr>
          <tr>
            <th style="width: 100px;"><span class="fa fa-envelope-o"> </span> Email </th>
            <td><%= @employee.email %></td>
          </tr>
          <tr>
            <th style="width: 150px;"><span class="fa fa-phone"> </span> Home Number </th>
            <td><%= @employee.mobile_number %></td>
          </tr>
          <tr>
            <th style="width: 150px;"><span class="fa fa-phone"> </span> Mobile Number </th>
            <td><%= @employee.mobile_number %></td>
          </tr>
        </table>
       </div>
       <div class="col-md-6">
         <h4>Other Information</h4>
         <table class="table table-bordered">
          <tr>
            <th style="width: 150px;"> SSS Number </th>
            <td><%= @employee.sss_number %></td>
          </tr>
          <tr>
            <th style="width: 150px;"> TIN Number </th>
            <td><%= @employee.sss_number %></td>
          </tr>
         </table>
       </div>
      </div>
    </div>
  </div>
</div>
