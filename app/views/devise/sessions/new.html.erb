<div class="login">
  <div class="login-box">
    <center>
      <div class="logo">
       <%= image_tag "logo.png" %>
      </div>
    </center>
    <center>
      <div id="loginform">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", :class => "btn btn-success btn-block" %>
          </div>
        <% end %>
      </div>
    </center>
  </div>
</div>

